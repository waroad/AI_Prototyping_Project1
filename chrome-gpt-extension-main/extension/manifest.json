{
    "manifest_version": 3,
    "name": "Hello World ChatGPT",
    "version": "1.0",
    "description": "Sends a Hello World message to ChatGPT using Node.js",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}